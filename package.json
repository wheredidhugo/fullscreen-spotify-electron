{
  "name": "fullscreen-spotify",
  "version": "1.2.5",
  "description": "An application that displays the current song you're listening to in fullscreen.",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "test": "echo 'Error: no test specified'",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=img/icons/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . fullscreen-spotify --overwrite --asar=true --platform=win32 --arch=ia32 --icon=img/icons/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Fullscreen Spotify\"",
    "package-linux": "electron-packager . fullscreen-spotify --overwrite --asar=true --platform=linux --arch=x64 --icon=img/icons/icon.png --prune=true --out=release-builds"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^13.1.6",
    "electron-packager": "^15.2.0"
  },
  "dependencies": {
    "lastfm": "^0.9.3"
  },
  "keywords": [
    "electron",
    "nodejs",
    "spotify",
    "js",
    "fullscreen",
    "lastfm"
  ]
}
